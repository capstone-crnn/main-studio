{
  "name": "gui",
  "version": "1.0.0",
  "description": "This is the GUI of our capstone project.",
  "private": true,
  "main": "./electron/index.js",
  "homepage": "https://github.com/capstone-crnn/main-studio",
  "author": {
    "name": "Nour Alsafadi",
    "email": "alsafadn@mcmaster.ca"
  },
  "scripts": {
    "pack": "npm run build && electron-builder",
    "pack:deb": "npm run build && electron-builder --dir --armv7l --linux deb",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "npm run build && electron ."
  },
  "build": {
    "appId": "cap.gui",
    "compression": "normal",
    "productName": "gui",
    "linux": {
      "target": "deb"
    },
    "deb": {},
    "artifactName": "gui_${version}_Setup.${ext}",
    "forceCodeSigning": false
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "autoprefixer": "^9.8.8",
    "chart.js": "^3.7.1",
    "d3": "^7.3.0",
    "postcss": "^7.0.39",
    "sirv-cli": "^2.0.0",
    "svelte-preprocess": "^4.10.3",
    "svelte-spa-router": "^3.2.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17"
  }
}
